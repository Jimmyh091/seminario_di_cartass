            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Hola"
                android:textColor="@color/casinegro"
                android:textSize="20sp" />

            <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buenos dias"
            app:layout_constraintTop_toBottomOf="@id/ej3_ll1"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
        

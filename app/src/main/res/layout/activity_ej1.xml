<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ej1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/pan" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/asulClarito"
        android:id="@+id/ej1_button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        app:layout_constraintVertical_weight="1"
        android:text="Pan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ej1_button2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/asulClarito"
        android:id="@+id/ej1_button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:text="VIno"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ej1_textView1"
        app:layout_constraintTop_toBottomOf="@+id/ej1_button1" />

    <TextView
        android:id="@+id/ej1_textView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hola manu, buenos dias y buenos dias, te deseo buenos dias y unos muy buenos dias"
        android:padding="30dp"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintBottom_toTopOf="@id/ej1_space1"
        app:layout_constraintEnd_toStartOf="@+id/ej1_textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ej1_button2" />

    <TextView
        android:id="@+id/ej1_textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Buenos buenos buenos buenos, muy buenos buenas, buenas. Buenos buena bunea"
        app:layout_constraintBottom_toBottomOf="@+id/ej1_textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ej1_textView1"
        app:layout_constraintTop_toTopOf="@id/ej1_textView1" />

    <Space
        android:id="@+id/ej1_space1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/ej1_textView2"
        app:layout_constraintBottom_toTopOf="@id/ej1_button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/asulClarito"
        android:id="@+id/ej1_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hola"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ej1_space1"
        app:layout_constraintEnd_toStartOf="@+id/ej1_button4"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/asulClarito"
        android:id="@+id/ej1_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="manu"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/ej1_button3"
        app:layout_constraintEnd_toStartOf="@+id/ej1_button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ej1_button3"
        app:layout_constraintTop_toTopOf="@+id/ej1_button3" />

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/asulClarito"
        android:id="@+id/ej1_button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="que tal"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/ej1_button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ej1_button4"
        app:layout_constraintTop_toTopOf="@+id/ej1_button3" />


</androidx.constraintlayout.widget.ConstraintLayout>